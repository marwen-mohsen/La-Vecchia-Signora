    private void buttonAjoutActionPerformed(java.awt.event.ActionEvent evt) {                                            
       String type = jComboBoxTyp.getSelectedItem().toString();
       
        
        
         
      // int id  = Integer.parseInt(NomField.getText());
       String nom = nomField.getText();
       String parm = pharmPField.getText();
       String code = cdPField.getText();
       String prvalid = pvField.getText();
       int prix=  Integer.parseInt(priField.getText());
       int remise = Integer.parseInt(RemisActField1.getText());
       int prixact = Integer.parseInt(PriActField.getText());
       
      // Produit pr=new Produit(nom,type,parm,code,prvalid,prix,remise,prixact);
       Produit pr=new Produit();
       pr.setNom(nom);
       pr.setType(type);
       pr.setPharmacie(parm);
       pr.setCodeproduit(code);
       pr.setPeriode_de_validite(prvalid);
       pr.setPrix(prix);
       pr.setRemise(remise);
       pr.setPrix_actuelle(prixact);
       ProduitDAO produittDAO = new ProduitDAO();
        produittDAO.Create(pr);
        JOptionPane.showMessageDialog(this, "Ajout effectué avec succès!");    
        
      
    }                                           

